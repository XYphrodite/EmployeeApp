<Window x:Class="EmployeeApp.EmployeeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EmployeeApp.EmployeeWpf"
        xmlns:viewModels="clr-namespace:EmployeeWpf.ViewModels"
        xmlns:converters="clr-namespace:EmployeeWpf.Converters"
        Title="Список сотрудников" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:EmployeeManagingVM />
    </Window.DataContext>
    <!--<Window.Resources>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
    </Window.Resources>-->
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="0,0,10,0"/>
            <!--<Button Content="Редактировать" Command="{Binding EditCommand}" Margin="0 0 10 0" 
                    IsEnabled="{Binding SelectedEmployee, Converter={StaticResource NullToBool}}"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" 
                    IsEnabled="{Binding SelectedEmployee, Converter={StaticResource NullToBool}}"/>-->
        </StackPanel>
        <DataGrid ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False" MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Firstname}" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" />
                <DataGridTextColumn Header="Должность" Binding="{Binding PositionName}" />
                <DataGridTextColumn Header="Активен" Binding="{Binding IsActive, Converter={StaticResource BoolToYesNoConverter}}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
